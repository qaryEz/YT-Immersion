{
  "manifest_version": 3,
  "name": "YouTube Immersion",
  "version": "0.9.0",
  "description": "YouTubeをApple Music風の歌詞表示付きMVモードにする拡張機能",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "css": ["style.css"],
      "js": ["content.js"]
    }
  ]
}